---
interface Props {
  title: string;
  emoji: string;
}

const { title, emoji } = Astro.props;
---

<div class="border border-gray-200 rounded-lg bg-gray-50 flex flex-row gap-4 px-4 py-3">
  <span class="text-xl">{emoji}</span>
  <div>
    {title && <div class="font-semibold leading-7 mb-2">{title}</div>}
    <slot />
  </div>
</div>